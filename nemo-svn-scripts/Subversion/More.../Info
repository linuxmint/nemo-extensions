# http://gnomefiles.org/app.php?soft_id=1059

LOGFILE=`mktemp -t svn_info.XXXXXX`

svn info "$@" > $LOGFILE
zenity --text-info --title="Subversion: Info" --filename=$LOGFILE --width=600 --height=400 --window-icon="`dirname $0`/svn.xpm"
rm -f $LOGFILE
